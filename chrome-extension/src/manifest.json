{
  "manifest_version": 3,
  "name": "Amazon Cart Scraper",
  "version": "1.0.0",
  "description": "Extract and download Amazon shopping cart items with prices and quantities",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://*.amazon.com/*", "http://localhost:3000/*"],
  "action": {
    "default_title": "Scrape Amazon Cart",
    "default_popup": "src/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*cart*",
        "https://*.amazon.com/gp/cart/*",
        "https://*.amazon.com/gp/cart/view.html"
      ],
      "js": ["src/content/cart_page.js"]
    }
  ],
  "background": {
    "service_worker": "src/background/background.js"
  }
}
